<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/main_hi_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="@string/main_hi_score"/>

        <TextView
            android:id="@+id/main_hi_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/main_hi_score"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="@string/main_hi_score_text"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_score"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/main_start"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="@string/main_start_button"
                android:background="@drawable/main_buttons"/>

            <Button
                android:id="@+id/main_add_words"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_start"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="@string/main_add_words_button"
                android:background="@drawable/main_buttons"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/splash_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:visibility="gone">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/splash_screen"/>

    </RelativeLayout>

</RelativeLayout>
